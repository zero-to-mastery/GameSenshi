{
	"firestore": {
		"rules": "/firestore.rules",
		"indexes": "/firestore.indexes.json"
	},
	"functions": {
		"source": "./functions"
	},
	"hosting": {
		"public": "build",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	},
	"storage": {
		"rules": "/storage.rules"
	}
}
